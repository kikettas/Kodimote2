<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/episode_layout"
                android:padding="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/episode_poster"
        android:src="@drawable/ic_media_route_on_mono_dark"
        android:adjustViewBounds="true"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/host_port"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OSMC"
        android:id="@+id/host_name"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/episode_poster"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.1.161"
        android:id="@+id/host_ip"
        android:layout_below="@+id/host_name"
        android:layout_toEndOf="@+id/episode_poster"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:id="@+id/host_port"
        android:layout_below="@+id/host_ip"
        android:layout_alignStart="@+id/host_ip"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/right_arrow"
        android:layout_alignTop="@+id/episode_poster"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>